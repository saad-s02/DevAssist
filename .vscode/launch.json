{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run DevAssist Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/apps/vscode-extension/dist/**/*.js"
      ],
      "preLaunchTask": "npm: compile - apps/vscode-extension"
    },
    {
      "name": "Run DevAssist Extension (No Build)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/apps/vscode-extension/dist/**/*.js"
      ]
    }
  ]
}
